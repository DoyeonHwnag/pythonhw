#include <stdio.h>

void main()
{
    int a;
    scanf("%d",&a);
    
    if (99 < a < 1000)
    {
    int b, c, d;
                
    b = a % 10;
    c = (a % 100 - b) / 10;
    d = (a - b - c) / 100;
    printf("%d", b + c + d);
    }
    else
    { printf("세자리 정수를 입력해주세요");
    }
}
